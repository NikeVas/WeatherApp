<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Weather" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Weather.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Weather.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Weather.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TextFont">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/beige</item>
    </style>

    <style name="TimeTextViewStyle" parent="TextFont">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/beige</item>
    </style>

    <style name="TemperatureTextViewStyle" parent="TextFont">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">21\u00B0"</item>
    </style>
    
    <style name="DayNameStyle" parent="TextFont">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="HumidityTextViewStyle" parent="TextFont">
        <item name="android:textSize">12sp</item>
    </style>
</resources>